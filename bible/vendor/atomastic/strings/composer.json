{
    "name": "atomastic/strings",
    "description": "Strings Component provide a fluent, object-oriented interface for working with multibyte string, allowing you to chain multiple string operations together using a more readable syntax compared to traditional PHP strings functions.",
    "license": "MIT",
    "keywords": [
        "Strings", "strings", "php-strings", "php", "atomastic", "strings-manipulation"
    ],
    "support": {
      "source": "https://github.com/atomastic/strings",
      "issues": "https://github.com/atomastic/strings/issues"
    },
    "authors": [
        {
            "name": "Sergey Romanenko",
            "email": "sergey.romanenko@flextype.org",
            "homepage": "https://github.com/Awilum"
        }
    ],
    "require": {
        "php": "^7.3 || ^8.0",
        "ext-json": "*",
        "ext-mbstring": "*",
        "atomastic/macroable": "^1.0"
    },
    "autoload":{
        "psr-4": {
            "Atomastic\\Strings\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "require-dev": {
        "doctrine/coding-standard": "8.1.0",
        "pestphp/pest": "^0.3.3",
        "phpstan/phpstan": "^0.12.42"
    }
}
